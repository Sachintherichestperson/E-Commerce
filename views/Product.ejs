<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <style>
        /* General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            width: 100%;
            height: 100%;
            background-color: #0d0d0d;
            color: white;
            overflow-x: hidden;
        }

        /* Custom Scrollbar */
        body::-webkit-scrollbar {
            width: 8px;
        }
        body::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 10px;
        }

        /* Navigation */
        nav {
            width: 100%;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(10px);
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
            font-size: 24px;
            font-weight: bold;
            letter-spacing: 1px;
        }

        /* Product Section */
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px 20px;
        }

        .product {
            width: 100%;
            max-width: 500px;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
            transition: transform 0.3s ease-in-out;
        }

        .product:hover {
            transform: scale(1.02);
        }

        .product img {
            width: 100%;
            border-radius: 10px;
            object-fit: cover;
        }

        .product-details {
            padding: 15px;
            text-align: center;
        }

        .product-name {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .product-price {
            font-size: 22px;
            color: #ffcc00;
            margin-bottom: 10px;
        }

        .product-description {
            font-size: 15px;
            opacity: 0.8;
            margin-bottom: 15px;
        }

        /* Buttons */
        .button {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .btn {
            padding: 12px 20px;
            border-radius: 25px;
            background: #ffcc00;
            color: black;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn:hover {
            background: #ffaa00;
            transform: scale(1.05);
        }

        /* Suggested Products Section */
        .suggestions {
            margin-top: 30px;
            width: 100%;
            max-width: 800px;
            display: flex;
            overflow-x: auto;
            gap: 15px;
            padding-bottom: 10px;
        }

        .suggestions::-webkit-scrollbar {
            height: 5px;
        }

        .suggestions::-webkit-scrollbar-thumb {
            background: #444;
            border-radius: 10px;
        }

        .suggested-product {
            min-width: 200px;
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
            transition: transform 0.3s;
        }

        .suggested-product:hover {
            transform: scale(1.05);
        }

        .suggested-product img {
            width: 100%;
            height: 150px;
            border-radius: 10px;
            object-fit: cover;
        }

        .suggested-product-name {
            margin-top: 10px;
            font-size: 16px;
            font-weight: bold;
        }

        .suggested-product-price {
            font-size: 14px;
            color: #ffcc00;
            margin: 5px 0;
        }

        .suggested-product .btn {
            width: 80%;
            margin-top: 5px;
            display: inline-block;
        }

        /* Footer */
        footer {
            width: 100%;
            background: rgba(255, 255, 255, 0.08);
            padding: 20px;
            text-align: center;
            margin-top: 50px;
        }

        .footer-links {
            margin: 15px 0;
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .footer-links a {
            text-decoration: none;
            color: white;
            opacity: 0.8;
            transition: 0.3s;
        }

        .footer-links a:hover {
            opacity: 1;
            color: #ffcc00;
        }

        .social-icons {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .social-icons i {
            font-size: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

        .social-icons i:hover {
            color: #ffcc00;
        }
        a{
            text-decoration: none;
            color: white;
        }
    </style>
</head>
<body>

    <!-- Navigation -->
    <nav>My Shop</nav>

    <!-- Product Section -->
    <div class="container">
        <div class="product">
            <img src="/<%= product.Productname %>/image/<%= product._id %>" alt="Product Image">
            <div class="product-details">
                <div class="product-name"><%= product.Productname %></div>
                <div class="product-price">₹ <%= product.Productprice %></div>
                <div class="product-description">
                   <%= product.Productdescription %>
                </div>
                <div class="button">
                    <div class="btn" onclick="addToCart('<%= product._id %>')">Add to Cart</div>
                    <a href="/<%= product.Productname %>/BuyNow/<%= product._id %>" class="btn">Buy Now</a>
                </div>
            </div>
        </div>

        <!-- Suggested Products -->
        <div class="suggestions">
            <% suggestions.forEach(function(suggestion) { %>
            <a href="/<%= suggestion.Productname %>/<%= suggestion._id %>/">
                <div class="suggested-product">
                    <img src="/<%= suggestion.Productname %>/image/<%= suggestion._id %>" alt="Suggested Product 1">
                    <div class="suggested-product-name"><%= suggestion.Productname %></div>
                    <div class="suggested-product-price">₹ <%= suggestion.Productprice %></div>
                    <div class="btn" onclick="addToCart('<%= product._id %>')">Add to Cart</div>
                </div>
            </a>
            <% }) %>
        </div>
    </div>
    <!-- Footer -->
    <footer>
        <div class="footer-links">
            <a href="#">Privacy Policy</a>
            <a href="#">Terms of Service</a>
            <a href="#">Contact Us</a>
        </div>
        <div class="social-icons">
            <i class="fab fa-facebook"></i>
            <i class="fab fa-twitter"></i>
            <i class="fab fa-instagram"></i>
        </div>
        <p>&copy; 2025 My Shop. All rights reserved.</p>
    </footer>
    <script>
        async function addToCart(productId) {
            try {
                const response = await fetch(`/addtocart/${productId}`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({})
                });

                const data = await response.json();
            } catch (error) {
                console.error("Error:", error);
            }
        }
    </script>
</body>
</html>
