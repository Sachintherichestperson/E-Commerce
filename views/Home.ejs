<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: #0d0d0d;
            color: white;
            overflow-x: hidden;
        }

        .banner {
    width: 100%;
    height: 300px;
    background: url('banner.jpg') center/cover no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
    font-weight: bold;
    color: #ffcc00;
    text-shadow: 0 0 15px rgba(255, 204, 0, 0.8);
    animation: fadeInBounce 2s ease-in-out, glowPulse 1.5s infinite alternate;
}

/* Smooth fade-in with bounce effect */
@keyframes fadeInBounce {
    0% {
        opacity: 0;
        transform: translateY(-50px);
    }
    50% {
        opacity: 0.5;
        transform: translateY(10px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Pulsating glow effect */
@keyframes glowPulse {
    0% {
        text-shadow: 0 0 10px rgba(255, 204, 0, 0.6), 0 0 20px rgba(255, 204, 0, 0.4);
    }
    100% {
        text-shadow: 0 0 20px rgba(255, 204, 0, 0.9), 0 0 30px rgba(255, 204, 0, 0.7);
    }
}

        .shown{
            display: flex;
            gap: 10px;
            padding: 20px;
            height: 300px;
        }
        .shown a{
            width: 50%;
        }

        .trending, .hot, .sale {
            padding: 40px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .trending {
            background: linear-gradient(135deg, #ff5733, #ff914d);
        }
        
        .hot {
            background: linear-gradient(135deg, #c70039, #ff5733);
        }

        .sale {
            background: linear-gradient(135deg, #900c3f, #c70039);
        }

        nav {
            width: 100%;
            padding: 15px 50px;
            background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0px 4px 15px rgba(255, 255, 255, 0.1);
        }

        nav img {
            width: 140px;
        }

        .nav-links {
            display: flex;
            gap: 30px;
        }

        .nav-links a {
            text-decoration: none;
            color: white;
            font-size: 17px;
            font-weight: 600;
            padding: 8px 15px;
            transition: 0.3s;
        }

        .nav-links a:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #ffcc00;
            border-radius: 5px;
        }

        .products-page {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 40px;
        }

        .product {
            background: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            width: 350px;
            box-shadow: 0 10px 40px rgba(255, 255, 255, 0.1);
        }

        .product:hover {
            animation: product 0.3s ease-in-out forwards;
        }

@keyframes product {
    0% {
        transform: scale(1);
    }
    100% {
        transform: scale(1.1);
    }
}


        .product img {
            width: 100%;
            border-radius: 10px;
            height: 200px;
            object-fit: cover;
        }

        .product-name {
            font-size: 20px;
            font-weight: bold;
            margin: 10px 0;
        }

        .product-description {
            font-size: 14px;
            margin-bottom: 10px;
        }

        .product-price {
            font-size: 18px;
            font-weight: bold;
            color: #ffcc00;
            margin-bottom: 10px;
        }

        .product-add {
            background: #ffcc00;
            color: #0d0d0d;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
            z-index: 1000;
        }

        .product-add:hover {
            background: #e6b800;
            transform: scale(1.25);
        }


        .About {
            width: 100%;
            height: 300px;
            background: url('banner.jpg') center/cover no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            font-weight: bold;
            color: #ffcc00;
            background-color: black;
        }

        footer {
            background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: 50px;
        }

        footer p {
            margin: 0;
            font-size: 14px;
        }

        .footer-links{
            margin-bottom: 40px;
        }

        footer a {
            color: #ffcc00;
            text-decoration: none;
            margin: 0 15px;
            font-weight: bold;
            transition: 0.3s;
        }

        footer a:hover {
            text-decoration: underline;
            color: #ff5733;
        }

        footer a{
            color: white;
        }

        .copyright{
            margin-bottom: 20px;
            color: #ffcc00;
            font-weight: 900;
        }
        a{
            text-decoration: none;
            color: unset;
        }
        .active{
            background-color: #ffc500;
            border-radius: 30px;
        }
    </style>
</head>
<body>
